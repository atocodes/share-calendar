<%- include('header_and_footer/header') -%>

<div id="joinCreate_main">
    <div id="choose">
        <div id="join_group">
            <button class="join_btn">JOIN GROUP</button>

            <form action="/join" method="post" class="join_create_form join">
                <!-- !group login authentication from  -->
                <%- include('common/joinGroupAuthenticationForm') -%>

                <button type="submit" id="join_submittion_btn" class="form_button">JOIN</button>
            </form>
        </div>
        <div id="create_group">
            
            <button class="create_btn">CREATE GROUP</button>

            <form action="/create" method="post" class="join_create_form create">

                
                <input type="text" name="grouptitle" placeholder="Group Title" class="input" required>
    
                <!-- * create group form -->
                <%- include('common/createGroupAuthenticationForm') -%>
    
                <button type="submit" id="group_creation_btn" class="form_button" onclick="matchPassword()">CREATE</button>
            </form>
        </div>
        <%- include('common/logout') -%>
        <img id="bg_img" src="assets/mhcda_logo.svg" alt="">
    </div>
</div>
<script src="../events.js"></script>
<%- include('header_and_footer/footer') -%>